(library
  (name        fix_simulation)
  (public_name fix-engine.fix_simulation)
  (wrapped  false)
  (modules (:standard \ server client))
  (flags (:standard -open Imandra_prelude -open Unix -warn-error -A+8+39))
  (libraries 
       lwt.unix
        venue
        fix_engine
        core_utils
        core_pp
        core_time_defaults
        core_time_defaults_pp
        types_pp
        protocol_pp
        conversions   
        lwt-zmq 
        imandra-base.prelude   
  )
)

